<p>
    <% if obj.errors.any? %>
        <div class="row">
            <div class="col-md-8 col-md-offset-2 alert alert-danger">
                <h5>Please correct the following errors:</h5>
                <ul>
                    <% obj.errors.full_messages.each do |message| %>
                    <li>
                        <%= message %>
                    </li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>
</p>