<%= render 'shared/page_title', title: "All recipes" %>
<%= will_paginate @recipes %>
<% @recipes.each do |recipe| %>
    <div class="row">
        <div class="col-md-2">
            <section class="chef_info center">
                <%= gravatar_for recipe.chef, size: 100 %>
                <h5>Chef name:<%= recipe.chef.chefname %></h5>
            </section>
        </div>
        <div class="col-lg-6 well">
            <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
            <p><%= recipe.summary %></p>
            <p>
                <span class="quite"><small> created: <%= time_ago_in_words(recipe.created_at) %> ago, </small></span>
                <span class="quite"><small> updated: <%= time_ago_in_words(recipe.updated_at) %> ago </small></span>
            </p>
            <div class="pull-right">
                <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
                    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>&nbsp&nbsp <%= recipe.thumbs_up_total %>
                <% end %>
            </div>
             <div class="pull-right">
                <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
                    <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>&nbsp&nbsp<%= recipe.thumbs_down_total %>
                <% end %>
            </div>
        </div>
        <div class="col-md-4">
            <%= image_tag(recipe.picture.url, size: "250x150", class: "gravatar") if recipe.picture? %>
        </div>
    </div>
    <hr />
<% end %>
<%= will_paginate @recipes %>